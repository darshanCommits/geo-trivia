{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "types": [ "vite/client" ],
    "noEmit": true,
    "incremental": true,
    "paths": {
      "@/*": [ "src/*" ],
      "@shared/*": [ "../shared/src/*" ]
    }
  },
  "include": [
    "./src/**/*",
    "../shared/src/**/*",
    "../libs/*/src/**/*"
  ]
}
